<document
    xmlns="http://maven.apache.org/changes/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
    <properties>
        <title>SoEBeS Maven Parent POM</title>
        <author
            email="sapm@soebes.de">Karl Heinz Marbaise</author>
    </properties>
    <body>
        <release
            version="Release 0.6.0"
            date="2012-10-XX"
            description="Enhancement Release">
            <action
                type="update"
                dev="Karl Heinz Marbaise">
                maven-site-plugin (3.2)
            </action>
            <action
                type="update"
                dev="Karl Heinz Marbaise">
                Updated maven-dependency-plugin (2.5.1), 
                maven-failsafe-plugin (2.12.4),
                maven-install-plugin (2.4),
                maven-ear-plugin (2.8),
                maven-project-infor-report-plugin (2.5.1),
                maven-resources-plugin (2.6),
                maven-source-plugin (2.2.1),
                maven-surefire-plugin (2.12.4),
                appassembler-maven-plugin (1.3),
                cobertura-maven-plugin (2.5.2)
            </action>
            <action
                type="add"
                dev="Karl Heinz Marbaise">
                maven-ear-plugin (2.8),
                maven-shade-plugin (2.0),
                maven-invoker-plugin (1.7),
                site-maven-plugin added for publishing site.
            </action>
        </release>
        <release
            version="Release 0.5.0"
            date="2012-07-01"
            description="Enhancement Release">
            <action
                type="update"
                dev="Karl Heinz Marbaise">
                Added fix for forked lifecylce of maven-jar-plugin.
                Updated changes, clean, compiler plugin.
                Updated appassembler plugin to 1.2.2 and fixed dependency type for log4j. 
            </action>
        </release>
        <release
            version="Release 0.4.0"
            date="2012-05-01"
            description="Enhancement Release">
            <action
                type="update"
                dev="Karl Heinz Marbaise">
                Added missing plugin: javadoc.
            </action>
        </release>
        <release
            version="Release 0.3.0"
            date="2012-01-18"
            description="Enhancement Release">
            <action
                type="update"
                dev="Karl Heinz Marbaise">
                Upgrades maven-surefire, maven-failsafe-plugin. Fixed wrong
                groupId/artifactId of the appassembler-maven-plugin.
                Introduced properties for the plugin versions.
            </action>
        </release>
        <release
            version="Release 0.2.0"
            date="2011-04-17"
            description="Enhancement Release">
            <action
                type="update"
                dev="Karl Heinz Marbaise">
                log4j added, testng dependency updated to 6.0.1 and
                added some plugins to the pluginManagement section (maven-surefire-plugin
                updated to 2.8.1; added maven-failsafe-plugin, maven-appassembler-plugin)
                moved dependencies to dependencyManagement section.
            </action>
        </release>
        <release
            version="Release 0.1.0"
            date="2011-01-08"
            description="First public Release">
            <action
                type="add"
                dev="Karl Heinz Marbaise">
                The first public release.
            </action>
        </release>
    </body>
</document>

